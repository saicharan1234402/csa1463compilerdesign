
%{
#include <stdio.h>
int charCount = 0;
int lineCount = 0;
int wordCount = 0;
%}

%option noyywrap

%%

\n { 
    lineCount++;
}

[a-zA-Z0-9]+ {
    charCount += yyleng;
    wordCount++;
}
. {
    charCount++;
}

%%
int main() {
    yylex();
    printf("Number of characters: %d\n", charCount);
    printf("Number of lines: %d\n", lineCount);
    printf("Number of words: %d\n", wordCount);
    return 0;
}
